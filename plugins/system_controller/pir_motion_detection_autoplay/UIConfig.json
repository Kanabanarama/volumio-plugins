{
  "page": {
    "label": "TRANSLATE.PLUGIN_CONFIGURATION"
  },
  "sections": [
      {
      "id": "playlist",
      "element": "section",
      "label": "PIR settings",
      "icon": "fa-microchip",
      "onSave": { "type": "controller", "endpoint": "system_controller/pir_motion_detection_autoplay", "method": "saveConfig" },
      "saveButton": {
        "label": "TRANSLATE.SAVE",
        "data": [
          "pin",
          "mode",
          "playlist",
          "random",
          "duration"
        ]
      },
      "content": [
        {
          "id": "pin",
          "type": "text",
          "element": "input",
          "label": "TRANSLATE.PIN_LABEL",
          "doc": "TRANSLATE.PIN_DOC",
          "value": ""
        },
        {
          "id": "pirtest",
          "element": "button",
          "label": "TRANSLATE.PIR_TEST_LABEL",
          "doc": "TRANSLATE.PIR_TEST_DOC",
          "onClick": {
            "type": "emit",
            "message": "callMethod",
            "data":{
              "endpoint": "system_controller/pir_motion_detection_autoplay",
              "method": "pirTest",
              "data": ""
            }
          }
        },
        {
            "id": "mode",
            "element": "select",
            "label": "Play mode",
            "value":  {"value": "continue", "label": "Continue playing on motion detection"},
            "options": [
                {"value": "continue", "label": "Continue playing on motion detection"},
                {"value": "playlist", "label": "Play dedicated playlist on motion detection"}
            ]
        },
        {
          "id": "playlist",
          "type": "text",
          "element": "input",
          "visibleIf": {"field": "mode", "value": "continue"},
          "label": "TRANSLATE.PLAYLIST_LABEL",
          "doc": "TRANSLATE.PLAYLIST_DOC",
          "value": ""
        },
        {
          "id":"random",
          "element": "switch",
          "visibleIf": {"field": "mode", "value": "playlist"},
          "label": "TRANSLATE.RANDOM_LABEL",
          "doc": "TRANSLATE.RANDOM_DOC",
          "value": false
        },
        {
          "id": "duration",
          "element": "equalizer",
          "visibleIf": {"field": "mode", "value": "playlist"},
          "label": "Play duration",
          "description": "The duration volumio should play after motion was detected.",
          "config": {
            "orientation": "horizontal",
            "bars": [
              {
                "min": 1,
                "max": 60,
                "step": 1,
                "value": 5,
                "tooltip": "always"
              }
            ]
          }
        }
      ]
    }
  ]
}
